{
  "manifest_version": 3,
  "name": "ablock",
  "description": "Ablock(Agressor block) - Extension to block russian propaganda in most popular social networks",
  "version": "0.0.1",
  "author": "flamelessowo",
  "icons": {
    "16": "icon.png",
    "32": "icon32.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "options_ui": {
    "page": "options.html"
  },
  "action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "content_scripts": [
      {
          "matches": ["https://www.youtube.com/*", "https://twitter.com/*", "https://www.instagram.com/*"],
          "js": ["js/vendor.js", "js/content_script.js"]
      }
  ],
  "background": {
    "service_worker": "js/background.js"
  },
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "downloads",
    "tabs"
  ],
  "host_permissions": [
    "<all_urls>"
  ]
}
